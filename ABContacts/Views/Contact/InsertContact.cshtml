@model Contact

<h2>Create a New Contact</h2>

@using (Html.BeginForm("InsertContactToDatabase", "Contact", "Post"))
{
        <input asp-for="PersonID" type="hidden" value="" />

    <label asp-for="FName" class="control-label">First Name</label>

    <input type="text" name="FName" class="form-control" value="" />

    <label asp-for="LName" class="control-label">Last Name</label>

    <input type="text" name="LName" class="form-control" value="" />

    <label asp-for="Phone" class="control-label">Phone</label>

    <input type="text" step="0.01" name="Phone" class="form-control" value="" />

    <label asp-for="Email" class="control-label">Email</label>

    <input type="text" step="0.01" name="Email" class="form-control" value="" />

    <label asp-for="Address" class="control-label">Address</label>

    <input type="text" step="0.01" name="Address" class="form-control" value="" />

    <label asp-for="City" class="control-label">City</label>

    <input type="text" step="0.01" name="City" class="form-control" value="" />

    <label asp-for="State" class="control-label">State</label>

    <input type="text" step="0.01" name="State" class="form-control" value="" />

    <label asp-for="Zip" class="control-label">Zip</label>

    <input type="text" step="0.01" name="Zip" class="form-control" value="" />
    <div class="form-group">
        <label for="">Select a Contact Type</label>
        <select class="form-control" name="ContactType" value="">
        
            <option value = "Other" selected>Other</option>
            <option value = "Family">Family</option>
            <option value = "Friend">Friend</option>
            <option value = "Business">Business</option>
            <option value = "Me">Me</option>
            <option value = ""></option>
         </select>
    </div>

    <input type="submit" value="Create Contact" class="btn btn-primary" />
}

