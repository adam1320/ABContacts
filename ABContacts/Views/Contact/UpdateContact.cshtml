@model Contact

<h2>Update @Model.FName @Model.LName</h2>

@using (Html.BeginForm("UpdateContactToDatabase", "Contact", "Post"))
{
    <input asp-for="PersonID" type="hidden" value="@Model.PersonID" />

    <label asp-for="FName" class="control-label">First Name</label>

    <input type="text" name="FName" class="form-control" value="@Model.FName" />

    <label asp-for="LName" class="control-label">Last Name</label>

    <input type="text" name="LName" class="form-control" value="@Model.LName" />

    <label asp-for="Phone" class="control-label">Phone</label>

    <input type="text" step="0.01" name="Phone" class="form-control" value="@Model.Phone" />

    <label asp-for="Email" class="control-label">Email</label>

    <input type="text" step="0.01" name="Email" class="form-control" value="@Model.Email" />

    <label asp-for="Address" class="control-label">Address</label>

    <input type="text" step="0.01" name="Address" class="form-control" value="@Model.Address" />

    <label asp-for="City" class="control-label">City</label>

    <input type="text" step="0.01" name="City" class="form-control" value="@Model.City" />

    <label asp-for="State" class="control-label">State</label>

    <input type="text" step="0.01" name="State" class="form-control" value="@Model.State" />

    <label asp-for="Zip" class="control-label">Zip</label>

    <input type="text" step="0.01" name="Zip" class="form-control" value="@Model.Zip" />

    <label asp-for="ContactType" class="control-label">Contact Type</label>

    <input type="text" step="0.01" name="ContactType" class="form-control" value="@Model.ContactType" />

    <input type="submit" value="Update Contact" class="btn btn-primary" />

}
