@model Contact

<h3>@Model.FName @Model.LName Information</h3>

<table class="table">
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Contact Type</th>
    </tr>
    <tr>
        <td>@Model.PersonID</td>
        <td>@Model.FName</td>
        <td>@Model.LName</td>
        <td>@Model.Phone</td>
        <td>@Model.Email</td>
        <td>@Model.Address</td>
        <td>@Model.City</td>
        <td>@Model.State</td>
        <td>@Model.Zip</td>
        <td>@Model.ContactType</td>
    </tr>

</table>
<div style="display: block">
    <a href="/Contact/UpdateContact/@Model.PersonID">Update this Contact</a>
</div>
<div style="display: block">
    @using (Html.BeginForm("DeleteContact", "Contact", "Post"))
    {
        <input type="hidden" asp-for="PersonID" value="@Model.PersonID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this contact" />
    }
</div>



